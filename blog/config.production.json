{
  "mail": {
      "transport": "SMTP",
      "options": {
          "service": "SES"
      }
  },
  "server": {
    "host": "0.0.0.0"
  },
  "database": {
    "client": "sqlite3",
    "connection": {
        "filename": "content/data/ghost.db"
    },
    "debug": false
  },
  "auth": {
    "type": "password"
  },
  "paths": {
